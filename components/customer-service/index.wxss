/* 客服组件样式 */
.customer-service {
  position: fixed;
  bottom: 160rpx;
  right: 40rpx;
  z-index: 1000;
}

.service-float-btn {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #1677ff 0%, #0958d9 100%);
  color: white;
  border: none;
  font-size: 36rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 24rpx rgba(22, 119, 255, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
}

.service-float-btn::after {
  border: none;
}

.service-options {
  position: absolute;
  bottom: 140rpx;
  right: 0;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  animation: slideUp 0.3s ease;
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.service-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx 40rpx;
  border-radius: 24rpx;
  border: none;
  min-width: 280rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.service-btn::after {
  border: none;
}

.emergency-btn {
  background: linear-gradient(135deg, #ff4d4f 0%, #cf1322 100%);
  color: white;
}

.normal-btn {
  background: white;
  color: #333;
  border: 4rpx solid #1677ff !important;
}

.btn-icon {
  font-size: 56rpx;
  margin-bottom: 12rpx;
}

.btn-text {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.btn-phone {
  font-size: 28rpx;
  opacity: 0.9;
}
