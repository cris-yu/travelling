/* pages/itinerary/itinerary.wxss */
.container {
  min-height: 100vh;
  padding-bottom: 40rpx;
}

.today-info-card {
  background: linear-gradient(135deg, #ff4d4f 0%, #cf1322 100%);
  color: white;
  padding: 48rpx;
  margin-bottom: 24rpx;
}

.today-badge {
  background: rgba(255, 255, 255, 0.3);
  display: inline-block;
  padding: 12rpx 32rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
}

.today-title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
  line-height: 1.4;
}

.key-info {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 32rpx;
  display: flex;
  align-items: center;
  gap: 32rpx;
}

.key-info:last-child {
  margin-bottom: 0;
}

.info-icon {
  font-size: 72rpx;
  flex-shrink: 0;
}

.info-content {
  flex: 1;
}

.info-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.info-value {
  color: #333;
  font-weight: bold;
  line-height: 1.4;
}

/* 超大字体 - 集合时间 */
.info-value.mega {
  font-size: 96rpx;
  color: #ff4d4f;
  font-family: 'Arial Black', sans-serif;
  letter-spacing: 4rpx;
}

/* 大字体 - 集合地点 */
.info-value.large {
  font-size: 36rpx;
  color: #1677ff;
}

/* 中等字体 - 导游信息 */
.info-value.medium {
  font-size: 40rpx;
  color: #52c41a;
}

.navigate-btn,
.call-btn {
  flex-shrink: 0;
  height: 100rpx;
  min-width: 240rpx;
  font-size: 36rpx;
  font-weight: bold;
  border-radius: 50rpx;
  border: none;
  padding: 0 40rpx;
}

.navigate-btn::after,
.call-btn::after {
  border: none;
}

.navigate-btn {
  background: linear-gradient(135deg, #1677ff 0%, #0958d9 100%);
  color: white;
}

.call-btn {
  background: linear-gradient(135deg, #52c41a 0%, #389e0d 100%);
  color: white;
}

.itinerary-section,
.tips-section,
.emergency-section {
  background: white;
  padding: 40rpx;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 32rpx;
}

.itinerary-timeline {
  position: relative;
}

.timeline-item {
  display: flex;
  gap: 32rpx;
  margin-bottom: 48rpx;
}

.timeline-item:last-child {
  margin-bottom: 0;
}

.timeline-time-wrapper {
  min-width: 180rpx;
  text-align: right;
}

.timeline-time {
  font-size: 38rpx;
  font-weight: bold;
  color: #1677ff;
  padding-top: 8rpx;
}

.timeline-marker {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.timeline-dot {
  width: 32rpx;
  height: 32rpx;
  background: #1677ff;
  border-radius: 50%;
  border: 6rpx solid white;
  box-shadow: 0 0 0 4rpx #1677ff;
  flex-shrink: 0;
  margin-top: 12rpx;
}

.timeline-line {
  width: 6rpx;
  flex: 1;
  background: #d9d9d9;
  margin-top: 8rpx;
  min-height: 80rpx;
}

.timeline-content {
  flex: 1;
}

.timeline-location {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

.timeline-activity {
  font-size: 32rpx;
  color: #666;
  line-height: 1.6;
}

.tips-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.tip-item {
  display: flex;
  align-items: flex-start;
  gap: 20rpx;
  font-size: 32rpx;
  line-height: 1.6;
}

.tip-bullet {
  color: #1677ff;
  font-size: 48rpx;
  font-weight: bold;
  flex-shrink: 0;
  margin-top: -8rpx;
}

.tip-text {
  color: #333;
  flex: 1;
}

.emergency-contacts {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.emergency-btn {
  height: 112rpx;
  line-height: 112rpx;
  font-size: 38rpx;
  font-weight: bold;
  border-radius: 56rpx;
  border: none;
  padding: 0;
}

.emergency-btn::after {
  border: none;
}

.emergency-btn.danger {
  background: linear-gradient(135deg, #ff4d4f 0%, #cf1322 100%);
  color: white;
}

.emergency-btn.primary {
  background: linear-gradient(135deg, #1677ff 0%, #0958d9 100%);
  color: white;
}
