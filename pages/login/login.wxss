/* pages/login/login.wxss */
.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 80rpx 48rpx 48rpx;
}

/* Logo区域 */
.logo-section {
  text-align: center;
  margin-bottom: 60rpx;
}

.logo {
  font-size: 120rpx;
  margin-bottom: 24rpx;
}

.app-name {
  font-size: 64rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 16rpx;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
}

.app-slogan {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 登录表单 */
.login-form {
  background: white;
  border-radius: 32rpx;
  padding: 48rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
}

/* 角色选择 */
.role-selector {
  margin-bottom: 40rpx;
}

.role-label {
  font-size: 36rpx;
  font-weight: bold;
  color: #262626;
  margin-bottom: 24rpx;
}

.role-tabs {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.role-tab {
  height: 120rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #f5f5f5;
  border: 3rpx solid #f5f5f5;
  border-radius: 16rpx;
  transition: all 0.3s;
}

.role-tab.active {
  background: linear-gradient(135deg, #e6f7ff 0%, #bae7ff 100%);
  border-color: #1677ff;
  box-shadow: 0 4rpx 12rpx rgba(22, 119, 255, 0.2);
}

.role-icon {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.role-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #262626;
}

.role-tab.active .role-name {
  color: #1677ff;
}

/* 表单项 */
.form-item {
  margin-bottom: 32rpx;
}

.form-label {
  font-size: 36rpx;
  font-weight: 600;
  color: #262626;
  margin-bottom: 16rpx;
}

.input-wrapper {
  position: relative;
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border: 3rpx solid #f5f5f5;
  border-radius: 16rpx;
  overflow: hidden;
  transition: all 0.3s;
}

.input-wrapper:focus-within {
  background: white;
  border-color: #1677ff;
  box-shadow: 0 0 0 4rpx rgba(22, 119, 255, 0.1);
}

.form-input {
  flex: 1;
  height: 100rpx;
  padding: 0 32rpx;
  font-size: 36rpx;
  color: #262626;
}

.password-toggle {
  width: 100rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  cursor: pointer;
}

/* 表单底部 */
.form-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.remember-me {
  display: flex;
  align-items: center;
}

.remember-label {
  display: flex;
  align-items: center;
  font-size: 30rpx;
  color: #595959;
}

.remember-label checkbox {
  margin-right: 12rpx;
  transform: scale(1.3);
}

.remember-label text {
  margin-left: 8rpx;
}

.forgot-password {
  font-size: 30rpx;
  color: #1677ff;
  font-weight: 600;
}

/* 登录按钮 */
.login-btn {
  width: 100%;
  height: 110rpx;
  line-height: 110rpx;
  background: linear-gradient(135deg, #1677ff 0%, #0958d9 100%);
  color: white;
  font-size: 42rpx;
  font-weight: bold;
  border-radius: 55rpx;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(22, 119, 255, 0.4);
  margin-bottom: 32rpx;
}

.login-btn::after {
  border: none;
}

.login-btn:active {
  opacity: 0.9;
  transform: scale(0.98);
}

/* 快速登录 */
.quick-login {
  margin-top: 32rpx;
}

.divider {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.divider::before,
.divider::after {
  content: '';
  flex: 1;
  height: 2rpx;
  background: #e8e8e8;
}

.divider-text {
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #999;
}

.wechat-login-btn {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background: #07c160;
  color: white;
  font-size: 36rpx;
  font-weight: 600;
  border-radius: 50rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.wechat-login-btn::after {
  border: none;
}

.wechat-icon {
  font-size: 44rpx;
  margin-right: 16rpx;
}

/* 注册提示 */
.register-hint {
  text-align: center;
  margin-top: 32rpx;
  font-size: 32rpx;
  color: #595959;
}

.register-link {
  color: #1677ff;
  font-weight: 600;
  margin-left: 8rpx;
}

/* 测试账号 */
.test-accounts {
  margin-top: 48rpx;
  padding: 32rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 24rpx;
  backdrop-filter: blur(10px);
}

.test-title {
  font-size: 32rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 16rpx;
  text-align: center;
}

.test-item {
  padding: 16rpx 24rpx;
  margin-bottom: 12rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 12rpx;
  font-size: 28rpx;
  color: white;
  text-align: center;
}

.test-item:last-child {
  margin-bottom: 0;
}
