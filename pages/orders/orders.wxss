/* pages/orders/orders.wxss */
.container {
  min-height: 100vh;
  padding-bottom: 140rpx;
}

.empty-state {
  text-align: center;
  padding: 160rpx 40rpx;
}

.empty-icon {
  font-size: 160rpx;
  display: block;
  margin-bottom: 40rpx;
}

.empty-text {
  font-size: 36rpx;
  color: #999;
  display: block;
  margin-bottom: 60rpx;
}

.go-home-btn {
  width: 400rpx;
  height: 96rpx;
  line-height: 96rpx;
  background: linear-gradient(135deg, #1677ff 0%, #0958d9 100%);
  color: white;
  border-radius: 48rpx;
  font-size: 34rpx;
  font-weight: 600;
  border: none;
}

.go-home-btn::after {
  border: none;
}

.orders-container {
  padding: 24rpx;
}

.order-card {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.08);
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 32rpx;
  padding-bottom: 32rpx;
  border-bottom: 4rpx solid #f0f0f0;
}

.order-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
}

.order-status {
  font-size: 32rpx;
  font-weight: 600;
  flex-shrink: 0;
}

.order-highlights {
  background: linear-gradient(135deg, #fff7e6 0%, #ffe7ba 100%);
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
}

.highlight-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  gap: 24rpx;
}

.highlight-item.urgent {
  background: #fff1f0;
  border-left: 8rpx solid #ff4d4f;
  padding-left: 24rpx;
  margin: 16rpx -32rpx;
  padding-right: 32rpx;
}

.highlight-label {
  font-size: 30rpx;
  color: #666;
  min-width: 140rpx;
}

.highlight-value {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  flex: 1;
}

.highlight-value.time {
  font-size: 56rpx;
  color: #ff4d4f;
  font-weight: bold;
}

.highlight-value.location {
  font-size: 34rpx;
  color: #1677ff;
}

.highlight-value.phone {
  font-size: 40rpx;
  color: #52c41a;
  font-family: 'Courier New', monospace;
}

.action-btn {
  background: white;
  border: 4rpx solid;
  padding: 16rpx 32rpx;
  border-radius: 40rpx;
  font-size: 30rpx;
  font-weight: 600;
  flex-shrink: 0;
  min-height: 88rpx;
}

.action-btn::after {
  border: none;
}

.map-btn {
  border-color: #1677ff;
  color: #1677ff;
}

.call-btn {
  border-color: #52c41a;
  color: #52c41a;
}

.order-details {
  margin-bottom: 32rpx;
}

.detail-row {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  font-size: 32rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.detail-row:last-child {
  border-bottom: none;
}

.detail-label {
  color: #666;
}

.detail-value {
  color: #333;
  font-weight: 500;
  text-align: right;
}

.detail-value.price {
  color: #ff4d4f;
  font-weight: bold;
  font-size: 36rpx;
}

.order-actions {
  display: flex;
  gap: 24rpx;
}

.action-button {
  flex: 1;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 34rpx;
  border-radius: 48rpx;
  font-weight: 600;
  border: none;
  padding: 0;
}

.action-button::after {
  border: none;
}

.action-button.outline {
  background: white;
  color: #1677ff;
  border: 4rpx solid #1677ff !important;
}

.action-button.primary {
  background: linear-gradient(135deg, #1677ff 0%, #0958d9 100%);
  color: white;
}

/* 紧急联系人区域 */
.emergency-contact-section {
  margin-top: 24rpx;
  padding: 24rpx;
  background: linear-gradient(135deg, #fff1f0 0%, #ffe7e6 100%);
  border: 2rpx solid #ff4d4f;
  border-radius: 16rpx;
}

.emergency-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #cf1322;
  margin-bottom: 16rpx;
}

.emergency-info {
  background: white;
  padding: 20rpx;
  border-radius: 12rpx;
}

.emergency-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 12rpx 0;
}

.emergency-row:not(:last-child) {
  border-bottom: 1rpx solid #f0f0f0;
}

.emergency-label {
  font-size: 32rpx;
  color: #666;
  font-weight: 600;
}

.emergency-value {
  font-size: 34rpx;
  color: #262626;
  font-weight: 600;
}

.emergency-value.phone {
  color: #ff4d4f;
  font-size: 36rpx;
  font-family: 'Arial', sans-serif;
}

.emergency-call-btn {
  height: 72rpx;
  line-height: 72rpx;
  padding: 0 32rpx;
  background: #ff4d4f;
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 36rpx;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(255, 77, 79, 0.3);
}

.emergency-call-btn::after {
  border: none;
}
