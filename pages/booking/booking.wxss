/* pages/booking/booking.wxss */
.container {
  padding-bottom: 200rpx;
}

.product-summary {
  background: linear-gradient(135deg, #1677ff 0%, #0958d9 100%);
  color: white;
  padding: 40rpx;
  margin-bottom: 24rpx;
}

.summary-title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
}

.summary-meta {
  display: flex;
  gap: 32rpx;
  font-size: 30rpx;
  flex-wrap: wrap;
}

.summary-price {
  font-weight: bold;
  font-size: 34rpx;
}

.form-section {
  background: white;
  padding: 40rpx;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 38rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
}

.section-subtitle {
  background: #fff7e6;
  border-left: 8rpx solid #faad14;
  padding: 20rpx 24rpx;
  font-size: 30rpx;
  color: #666;
  margin-bottom: 32rpx;
  line-height: 1.5;
}

.picker {
  padding: 28rpx;
  border: 2rpx solid #d9d9d9;
  border-radius: 16rpx;
  font-size: 34rpx;
  color: #333;
  min-height: 100rpx;
  display: flex;
  align-items: center;
}

.traveler-card {
  background: #fafafa;
  border: 2rpx solid #e5e5e5;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
}

.traveler-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.traveler-number {
  font-size: 34rpx;
  font-weight: 600;
  color: #1677ff;
}

.remove-btn {
  background: none;
  border: none;
  color: #ff4d4f;
  font-size: 30rpx;
  padding: 12rpx 24rpx;
  min-height: 64rpx;
}

.remove-btn::after {
  border: none;
}

.form-field {
  margin-bottom: 32rpx;
}

.form-field:last-child {
  margin-bottom: 0;
}

.field-label {
  display: block;
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 16rpx;
}

.field-input {
  width: 100%;
  padding: 28rpx;
  border: 2rpx solid #d9d9d9;
  border-radius: 16rpx;
  font-size: 34rpx;
  color: #333;
  background: white;
  min-height: 100rpx;
}

.add-traveler-btn {
  width: 100%;
  padding: 28rpx;
  background: white;
  border: 4rpx dashed #1677ff;
  border-radius: 16rpx;
  color: #1677ff;
  font-size: 34rpx;
  font-weight: 600;
  min-height: 100rpx;
}

.add-traveler-btn::after {
  border: none;
}

.price-section {
  border: 4rpx solid #1677ff;
}

.price-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  font-size: 34rpx;
}

.price-item:not(:last-child) {
  border-bottom: 2rpx solid #f0f0f0;
}

.price-item.total {
  padding-top: 32rpx;
  margin-top: 16rpx;
  border-top: 4rpx solid #f0f0f0;
  border-bottom: none;
}

.price-label {
  color: #666;
  font-weight: 500;
}

.price-value {
  color: #333;
  font-weight: 600;
}

.total-price {
  font-size: 48rpx;
  color: #ff4d4f;
  font-weight: bold;
}

.submit-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 24rpx 32rpx;
  box-shadow: 0 -4rpx 24rpx rgba(0, 0, 0, 0.1);
  z-index: 99;
}

.submit-btn {
  height: 104rpx;
  line-height: 104rpx;
  font-size: 38rpx;
  font-weight: bold;
  border-radius: 52rpx;
  background: linear-gradient(135deg, #1677ff 0%, #0958d9 100%);
  color: white;
  border: none;
  padding: 0;
}

.submit-btn::after {
  border: none;
}
