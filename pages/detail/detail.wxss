/* pages/detail/detail.wxss */
.container {
  padding-bottom: 160rpx;
}

.detail-banner {
  width: 100%;
  height: 500rpx;
}

.detail-title-section {
  background: white;
  padding: 40rpx;
  margin-bottom: 24rpx;
}

.detail-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.detail-desc {
  font-size: 32rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 32rpx;
}

.detail-price {
  display: flex;
  align-items: baseline;
  gap: 12rpx;
}

.price-text {
  font-size: 64rpx;
  font-weight: bold;
  color: #ff4d4f;
}

.price-unit {
  font-size: 32rpx;
  color: #999;
}

.info-card {
  background: white;
  padding: 40rpx;
  margin-bottom: 24rpx;
}

.highlight-card {
  border: 4rpx solid #1677ff;
  background: linear-gradient(to bottom, #e6f4ff 0%, white 100%);
}

.card-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 32rpx;
}

.info-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 32rpx;
  margin-bottom: 32rpx;
}

.info-item {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.info-label {
  font-size: 28rpx;
  color: #999;
}

.info-value {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.info-value.highlight {
  font-size: 40rpx;
  color: #1677ff;
}

.intensity-desc {
  background: #fff7e6;
  border-left: 8rpx solid #faad14;
  padding: 24rpx;
  font-size: 30rpx;
  color: #666;
  line-height: 1.6;
}

.medical-info,
.transport-info {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.medical-item,
.transport-item {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  font-size: 32rpx;
  line-height: 1.6;
}

.check-icon {
  font-size: 40rpx;
}

.medical-text {
  font-weight: 600;
  color: #52c41a;
}

.label-text {
  color: #666;
  flex-shrink: 0;
}

.value-text {
  color: #333;
  flex: 1;
}

.value-text.bold {
  font-weight: 600;
  color: #1677ff;
}

.transport-features {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-top: 16rpx;
}

.feature-tag {
  background: #e6f4ff;
  color: #1677ff;
  padding: 12rpx 24rpx;
  border-radius: 32rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.highlights-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.highlight-item {
  display: flex;
  align-items: flex-start;
  gap: 20rpx;
  font-size: 32rpx;
  line-height: 1.6;
}

.highlight-bullet {
  color: #1677ff;
  font-size: 40rpx;
  font-weight: bold;
  flex-shrink: 0;
}

.highlight-text {
  color: #333;
  flex: 1;
}

.itinerary-timeline {
  position: relative;
  padding-left: 40rpx;
}

.timeline-item {
  display: grid;
  grid-template-columns: 160rpx 60rpx 1fr;
  gap: 24rpx;
  margin-bottom: 48rpx;
  position: relative;
}

.timeline-item:last-child {
  margin-bottom: 0;
}

.timeline-time {
  font-size: 34rpx;
  font-weight: 600;
  color: #1677ff;
  text-align: right;
  padding-top: 4rpx;
}

.timeline-dot {
  width: 24rpx;
  height: 24rpx;
  background: #1677ff;
  border-radius: 50%;
  margin-top: 12rpx;
  position: relative;
  z-index: 1;
}

.timeline-item:not(:last-child) .timeline-dot::after {
  content: '';
  position: absolute;
  left: 50%;
  top: 24rpx;
  transform: translateX(-50%);
  width: 4rpx;
  height: 80rpx;
  background: #d9d9d9;
}

.timeline-content {
  padding-bottom: 16rpx;
}

.timeline-location {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

.timeline-activity {
  font-size: 30rpx;
  color: #666;
  line-height: 1.5;
}

.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.product-tag {
  background: linear-gradient(135deg, #e6f4ff 0%, #bae0ff 100%);
  color: #1677ff;
  padding: 16rpx 32rpx;
  border-radius: 40rpx;
  font-size: 30rpx;
  font-weight: 500;
}

.detail-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 24rpx 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 -4rpx 24rpx rgba(0, 0, 0, 0.1);
  z-index: 99;
}

.footer-price {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
}

.footer-price-value {
  font-size: 56rpx;
  font-weight: bold;
  color: #ff4d4f;
}

.footer-price-unit {
  font-size: 28rpx;
  color: #999;
}

.book-btn {
  flex: 1;
  max-width: 400rpx;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 36rpx;
  font-weight: 600;
  border-radius: 48rpx;
  background: linear-gradient(135deg, #1677ff 0%, #0958d9 100%);
  color: white;
  border: none;
  text-align: center;
  padding: 0;
}

.book-btn::after {
  border: none;
}
