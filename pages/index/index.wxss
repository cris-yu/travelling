/* pages/index/index.wxss */
.container {
  padding-bottom: 140rpx;
}

.search-header {
  background: white;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.header-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.page-title {
  font-size: 52rpx;
  font-weight: bold;
  color: #1677ff;
}

.user-info {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.user-icon {
  font-size: 48rpx;
}

.search-box {
  background: #f5f5f5;
  border-radius: 48rpx;
  padding: 0 32rpx;
  height: 96rpx;
}

.search-input {
  height: 96rpx;
  font-size: 34rpx;
}

.filter-section {
  background: white;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.filter-group {
  margin-bottom: 32rpx;
}

.filter-group:last-child {
  margin-bottom: 0;
}

.filter-label {
  font-size: 34rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
  color: #333;
}

.filter-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tag {
  padding: 16rpx 32rpx;
  border-radius: 32rpx;
  font-size: 32rpx;
  background: #f5f5f5;
  color: #666;
}

.tag-active {
  background: #1677ff;
  color: white;
}

.products-container {
  padding: 0 24rpx;
}

.product-card {
  background: white;
  border-radius: 24rpx;
  margin-bottom: 32rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.08);
}

.product-image-container {
  position: relative;
  width: 100%;
  height: 400rpx;
}

.product-image {
  width: 100%;
  height: 100%;
}

.product-tags-overlay {
  position: absolute;
  top: 24rpx;
  left: 24rpx;
  display: flex;
  gap: 16rpx;
}

.tag-overlay {
  background: rgba(255, 255, 255, 0.95);
  color: #1677ff;
  padding: 12rpx 24rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 600;
}

.product-info {
  padding: 32rpx;
}

.product-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.product-desc {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 24rpx;
  line-height: 1.5;
}

.product-meta {
  display: flex;
  gap: 32rpx;
  margin-bottom: 24rpx;
  flex-wrap: wrap;
}

.meta-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 30rpx;
  color: #666;
}

.meta-icon {
  font-size: 36rpx;
}

.product-features {
  display: flex;
  gap: 20rpx;
  margin-bottom: 32rpx;
  flex-wrap: wrap;
}

.intensity-badge,
.age-badge,
.medical-badge {
  padding: 12rpx 24rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: white;
}

.age-badge {
  background: #faad14;
}

.medical-badge {
  background: #52c41a;
}

.product-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 32rpx;
  border-top: 2rpx solid #f0f0f0;
}

.price-section {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
}

.price-label {
  font-size: 28rpx;
  color: #999;
}

.price {
  font-size: 56rpx;
  font-weight: bold;
  color: #ff4d4f;
}

.price-unit {
  font-size: 28rpx;
  color: #999;
}

.view-btn {
  background: linear-gradient(135deg, #1677ff 0%, #0958d9 100%);
  color: white;
  padding: 24rpx 56rpx;
  border-radius: 48rpx;
  font-size: 34rpx;
  font-weight: 600;
}

.empty-state {
  text-align: center;
  padding: 120rpx 40rpx;
}

.empty-icon {
  font-size: 128rpx;
  display: block;
  margin-bottom: 32rpx;
}

.empty-text {
  font-size: 36rpx;
  color: #999;
}
